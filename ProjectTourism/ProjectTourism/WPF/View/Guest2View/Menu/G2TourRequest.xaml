                                    <DataTemplate>
                                        <Label FontFamily="/Fonts/#Rubik" FontSize="14"
                                               VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <Label.Content>
                                                <TextBlock>
                                                    <TextBlock.Text>
                                                        <MultiBinding StringFormat="{}{0} -&#x0d;{1}">
