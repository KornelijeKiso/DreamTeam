                                    <DataTemplate>
                                        <Label FontFamily="/Fonts/#Rubik" FontSize="14"
                                               VerticalAlignment="Center" HorizontalAlignment="Center"
                                               Content="{Binding Path=NumberOfGuests}"
                                               />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>

