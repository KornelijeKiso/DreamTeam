<Window x:Class="ProjectTourism.View.GuideView.MainGuideWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:ProjectTourism.View.GuideView"
    mc:Ignorable="d"
    Title="Guide window" Height="720" Width="1280"
    WindowStartupLocation="CenterScreen">
    <Grid>
        <Image Source="/WPF/View/GuideView/background.jpg" Margin="-30,-47,-22,0"/>
        <StackPanel Orientation="Horizontal" Margin="612,46,32,596">
            <TextBlock FontSize="20"><Hyperlink x:Name="HomeLink_Click" NavigateUri="home.xaml" RequestNavigate="HomeLink_RequestNavigate"><Run Text="Home"/></Hyperlink></TextBlock>
            <TextBlock Margin="40,0,0,0" FontSize="20"><Hyperlink x:Name="LiveTourMonitorLink" NavigateUri="home.xaml" RequestNavigate="LiveTourMonitorLink_RequestNavigate"><Run Text="Today's tours"/></Hyperlink></TextBlock>
            <TextBlock Margin="40,0,0,0" FontSize="20"><Hyperlink x:Name="AllAppointmentsLink" NavigateUri="home.xaml" RequestNavigate="AllAppointmentsLink_RequestNavigate"><Run Text="All Appointments"/></Hyperlink></TextBlock>
            <TextBlock Margin="40,0,0,0" FontSize="20"><Hyperlink x:Name="RequestsLink" NavigateUri="home.xaml" RequestNavigate="RequestsLink_RequestNavigate"><Run Text="Requests"/></Hyperlink></TextBlock>
            <TextBlock Margin="40,0,0,0" FontSize="20"><Hyperlink x:Name="ProfileLink" NavigateUri="home.xaml" RequestNavigate="ProfileLink_RequestNavigate"><Run Text="Profile"/></Hyperlink></TextBlock>
        </StackPanel>
        <ContentControl x:Name="ContentArea"/>
    </Grid>
</Window>
