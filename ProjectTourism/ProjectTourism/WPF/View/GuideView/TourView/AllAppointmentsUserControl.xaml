                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Width="45" Header="Pdf" >
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Visibility="{Binding AreThereAnyTickets, Converter={conv:BoolToVisibilityConverter}}" HorizontalAlignment="Center" VerticalAlignment="Center" Height="35" Width="35" Margin="0, 0, 0, 0" Click="PdfReportButton_Click">
                                            <Button.Background>
                                                <ImageBrush ImageSource="https://cdn-icons-png.flaticon.com/256/8304/8304482.png" />
                                            </Button.Background>
                                            <Button.Resources>
                                                <Style TargetType="Border">
                                                    <Setter Property="CornerRadius" Value="25"/>
