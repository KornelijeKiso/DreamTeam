<Window x:Class="ProjectTourism.View.GuideView.RouteView.LanguageAdditionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectTourism.View.GuideView.RouteView"
        mc:Ignorable="d"
        Title="Language" Height="280" Width="300"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Enter a language of the route:" HorizontalAlignment="Center" Margin="0,57,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="LanguageTextBox" HorizontalAlignment="Center" Height="27" Margin="0,109,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="208"/>
        <Button IsDefault="True" IsCancel="True" x:Name="AddLanguageButton" Content="Add" HorizontalAlignment="Center" Height="35" Margin="0,177,0,0" VerticalAlignment="Top" Width="64" Click="AddLanguageButton_Click"/>

    </Grid>
</Window>
