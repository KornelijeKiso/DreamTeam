<Window x:Class="ProjectTourism.View.OwnerView.MainOwnerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectTourism.View.OwnerView"
        mc:Ignorable="d"
        Title="MainOwnerWindow" Height="570" Width="1000" HorizontalAlignment="Center" VerticalAlignment="Top">
    <Grid>
        <DataGrid x:Name="DataGridAccommodations" ItemsSource="{Binding Accommodations, UpdateSourceTrigger=PropertyChanged}"
                    SelectedItem="{Binding SelectedAccommodation, UpdateSourceTrigger=PropertyChanged}" SelectionMode="Single"
                    IsReadOnly="True" AutoGenerateColumns="False" Margin="270,49,10,305">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Width="100" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="City" Width="80" Binding="{Binding Location.City}" />
                <DataGridTextColumn Header="Country" Width="80" Binding="{Binding Location.Country}" />
                <DataGridTextColumn Header="Max number of guests" Width="135" Binding="{Binding MaxNumberOfGuests}" />
                <DataGridTextColumn Header="Cancellation deadline" Width="130" Binding="{Binding CancellationDeadline}" />
                <DataGridTextColumn Header="Min number of days to reserve" Width="195" Binding="{Binding MinDaysForReservation}" />
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Register a new accommodation" HorizontalAlignment="Left" IsDefault="True" Margin="30,495,0,0" VerticalAlignment="Top" Height="29" Width="196" Click="RegisterAccommodationClick"/>
        <Rectangle HorizontalAlignment="Left" Height="451" Stroke="Blue" VerticalAlignment="Top" Width="235" Margin="10,39,0,0"/>
        <TextBox HorizontalAlignment="Left" Margin="30,69,0,0" TextWrapping="Wrap" Text="{Binding Path=NewAccommodation.Name, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="196" Height="33"/>
        <TextBox HorizontalAlignment="Left" Margin="30,129,0,0" TextWrapping="Wrap" Text="{Binding Path=NewLocation.City, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="196" Height="33"/>
        <TextBox HorizontalAlignment="Left" Margin="30,189,0,0" TextWrapping="Wrap" Text="{Binding Path=NewLocation.Country, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="196" Height="33"/>
        <TextBox HorizontalAlignment="Left" Margin="30,249,0,0" TextWrapping="Wrap" Text="{Binding Path=NewAccommodation.MaxNumberOfGuests, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="196" Height="33"/>
        <TextBox HorizontalAlignment="Left" Margin="30,309,0,0" TextWrapping="Wrap" Text="{Binding Path=NewAccommodation.MinDaysForReservation, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="196" Height="33"/>
        <TextBox HorizontalAlignment="Left" Margin="30,369,0,0" TextWrapping="Wrap" Text="{Binding Path=NewAccommodation.CancellationDeadline, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="196" Height="33"/>
        <ComboBox Name="ComboType" HorizontalAlignment="Left" Margin="30,429,0,0" VerticalAlignment="Top" Width="196" Height="30">
            <ComboBoxItem Content="Apartment" IsSelected="True"/>
            <ComboBoxItem Content="House"/>
            <ComboBoxItem Content="Hut"/>
        </ComboBox>
        <Label Content="Name" HorizontalAlignment="Left" Margin="30,43,0,0" VerticalAlignment="Top" Width="152"/>
        <Label Content="City" HorizontalAlignment="Left" Margin="30,103,0,0" VerticalAlignment="Top" Width="152"/>
        <Label Content="Country" HorizontalAlignment="Left" Margin="30,163,0,0" VerticalAlignment="Top" Width="152"/>
        <Label Content="Max number of guests" HorizontalAlignment="Left" Margin="30,223,0,0" VerticalAlignment="Top" Width="175"/>
        <Label Content="Min days to reserve" HorizontalAlignment="Left" Margin="30,283,0,0" VerticalAlignment="Top" Width="152"/>
        <Label Content="Cancellation deadline" HorizontalAlignment="Left" Margin="30,343,0,0" VerticalAlignment="Top" Width="152"/>
        <Label Content="Accommodation type" HorizontalAlignment="Left" Margin="30,403,0,0" VerticalAlignment="Top" Width="152"/>
        <DataGrid x:Name="DataGridAccommodations_Copy" ItemsSource="{Binding Reservations, UpdateSourceTrigger=PropertyChanged}"
            SelectedItem="{Binding SelectedReservation, UpdateSourceTrigger=PropertyChanged}" SelectionMode="Single"
            IsReadOnly="True" AutoGenerateColumns="False" Margin="270,285,10,68">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Width="100" Binding="{Binding Accommodation.Name}"/>
                <DataGridTextColumn Header="Start" Width="80" Binding="{Binding StartDate}" />
                <DataGridTextColumn Header="End" Width="80" Binding="{Binding EndDate}" />
                <DataGridTextColumn Header="Guest" Width="200" Binding="{Binding Guest1.FirstName}"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
